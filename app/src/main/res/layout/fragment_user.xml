<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    tools:context=".ui.user.UserFragment">

    <Button
        android:id="@+id/user_profile_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Profile"
        app:layout_constraintEnd_toEndOf="@+id/user_sign_out_button"
        app:layout_constraintStart_toStartOf="@+id/user_sign_out_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/user_saved_destinations_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Saved Destinations"
        app:layout_constraintEnd_toEndOf="@+id/user_sign_out_button"
        app:layout_constraintStart_toStartOf="@+id/user_sign_out_button"
        app:layout_constraintTop_toBottomOf="@+id/user_profile_button" />

    <Button
        android:id="@+id/user_settings_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Settings"
        app:layout_constraintEnd_toEndOf="@+id/user_sign_out_button"
        app:layout_constraintStart_toStartOf="@+id/user_sign_out_button"
        app:layout_constraintTop_toBottomOf="@+id/user_saved_destinations_button" />

    <Button
        android:id="@+id/user_sign_out_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="Sign Out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_settings_button" />
</androidx.constraintlayout.widget.ConstraintLayout>